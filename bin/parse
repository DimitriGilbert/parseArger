#!/bin/bash
# @parseArger-begin
# @parseArger-help "parse an existing parseArger script and add arguments, options, flag, etc..." --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
# @parseArger-set export PARSEARGER_ROOT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")"/..;pwd -P);
export PARSEARGER_ROOT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")"/..;pwd -P);
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger pos file "file to parse"
# @parseArger opt pos "add positional argument declaration" --short p --repeat
# @parseArger opt opt "add optional arg declaration" --short o --repeat
# @parseArger opt flag "add flag declaration" --short f --repeat
# @parseArger opt set "add declare var" --short s --repeat
# @parseArger opt source "add file to source" --short l --repeat
# @parseArger opt set-version "set version"
# @parseArger opt dependencies "set a dependency" --repeat
# @parseArger opt nested "nested option declaration" --repeat
# @parseArger flag inplace "replace parseArger generated content in place" --short i
# @parseArger flag leftovers "enable leftovers"
# @parseArger flag parse-leftovers "enable parsing of leftovers"
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
_arg_file="";
# OPTIONALS ARGUMENTS
_arg_pos=()
_arg_opt=()
_arg_flag=()
_arg_set=()
_arg_source=()
_arg_set_version=
_arg_dependencies=()
_arg_nested=()
# FLAGS
_arg_inplace="off"
_arg_leftovers="off"
_arg_parse_leftovers="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "parse an existing parseArger script and add arguments, options, flag, etc...:"
	echo -e "	file: file to parse"
	echo -e "	-p, --pos <pos>: add positional argument declaration, repeatable"
	echo -e "	-o, --opt <opt>: add optional arg declaration, repeatable"
	echo -e "	-f, --flag <flag>: add flag declaration, repeatable"
	echo -e "	-s, --set <set>: add declare var, repeatable"
	echo -e "	-l, --source <source>: add file to source, repeatable"
	echo -e "	--set-version <set-version>: set version"
	echo -e "	--dependencies <dependencies>: set a dependency, repeatable"
	echo -e "	--nested <nested>: nested option declaration, repeatable"
	echo -e "	-i|--inplace|--no-inplace: replace parseArger generated content in place"
	echo -e "	--leftovers|--no-leftovers: enable leftovers"
	echo -e "	--parse-leftovers|--no-parse-leftovers: enable parsing of leftovers"
	echo -e "Usage :
	$0 <file> [--pos <value>] [--opt <value>] [--flag <value>] [--set <value>] [--source <value>] [--set-version <value>] [--dependencies <value>] [--nested <value>] [--[no-]inplace] [--[no-]leftovers] [--[no-]parse-leftovers]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="\033[0;31m";
				;;
			-2)
				_arg_COLOR="\033[0;33m";
				;;
			-1)
				_arg_COLOR="\033[1;33m";
				;;
			1)
				_arg_COLOR="\033[0;32m";
				;;
			2)
				_arg_COLOR="\033[1;36m";
				;;
			3)
				_arg_COLOR="\033[0;36m";
				;;
			*)
				_arg_COLOR="\033[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}\033[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-p|--pos)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_pos+=("$2")
				shift
				;;
			--pos=*)
				_arg_pos+=("${_key##--pos=}")
				;;
			-p*)
				_arg_pos+=("${_key##-p}")
				;;
			
			-o|--opt)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_opt+=("$2")
				shift
				;;
			--opt=*)
				_arg_opt+=("${_key##--opt=}")
				;;
			-o*)
				_arg_opt+=("${_key##-o}")
				;;
			
			-f|--flag)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_flag+=("$2")
				shift
				;;
			--flag=*)
				_arg_flag+=("${_key##--flag=}")
				;;
			-f*)
				_arg_flag+=("${_key##-f}")
				;;
			
			-s|--set)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_set+=("$2")
				shift
				;;
			--set=*)
				_arg_set+=("${_key##--set=}")
				;;
			-s*)
				_arg_set+=("${_key##-s}")
				;;
			
			-l|--source)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_source+=("$2")
				shift
				;;
			--source=*)
				_arg_source+=("${_key##--source=}")
				;;
			-l*)
				_arg_source+=("${_key##-l}")
				;;
			
			--set-version)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_set_version="$2"
				shift
				;;
			--set-version=*)
				_arg_set_version="${_key##--set-version=}"
				;;
			
			--dependencies)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_dependencies+=("$2")
				shift
				;;
			--dependencies=*)
				_arg_dependencies+=("${_key##--dependencies=}")
				;;
			
			--nested)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_nested+=("$2")
				shift
				;;
			--nested=*)
				_arg_nested+=("${_key##--nested=}")
				;;
			
			-i|--inplace)
				_arg_inplace="on"
				;;
			--no-inplace)
				_arg_inplace="off"
				;;
			--leftovers)
				_arg_leftovers="on"
				;;
			--no-leftovers)
				_arg_leftovers="off"
				;;
			--parse-leftovers)
				_arg_parse_leftovers="on"
				;;
			--no-parse-leftovers)
				_arg_parse_leftovers="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
					if [ $# -lt 2 ];then
						_verbose_level="$((_verbose_level + 1))";
					else
						_verbose_level="$2";
						shift;
					fi
					;;
				--quiet)
					if [ $# -lt 2 ];then
						_verbose_level="$((_verbose_level - 1))";
					else
						_verbose_level="-$2";
						shift;
					fi
					;;
				
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="file"
	if [ "${_positionals_count}" -gt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 1 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').\n\t${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 1 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="_arg_file ";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	file: ${_arg_file}";
	echo -e "	pos: ${_arg_pos[*]}";
	echo -e "	opt: ${_arg_opt[*]}";
	echo -e "	flag: ${_arg_flag[*]}";
	echo -e "	set: ${_arg_set[*]}";
	echo -e "	source: ${_arg_source[*]}";
	echo -e "	set-version: ${_arg_set_version}";
	echo -e "	dependencies: ${_arg_dependencies[*]}";
	echo -e "	nested: ${_arg_nested[*]}";
	echo -e "	inplace: ${_arg_inplace}";
	echo -e "	leftovers: ${_arg_leftovers}";
	echo -e "	parse-leftovers: ${_arg_parse_leftovers}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end
SCRIPT_ROOT_DIR=$(
  cd "$(dirname "${BASH_SOURCE[0]}")"
  pwd -P
);
source "$SCRIPT_ROOT_DIR/utils";

parseHelpMessage() {
	echo "$1";
}

paStart="# @parse"
paStart+="Arger"

_help="$(parsearger_get_help "$_arg_file")";
_version="$(parsearger_get_version "$_arg_file")";
_leftovers="$(parsearger_get_leftovers "$_arg_file")";
_parse_leftovers="$(parsearger_get_parse_leftovers "$_arg_file")";
_set=();
_source=();
_pos=();
_opt=();
_flag=();
_nested=();
_dependencies=();
parsearger_get_set _set "$_arg_file";
parsearger_get_source _source "$_arg_file";
parsearger_get_pos _pos "$_arg_file";
parsearger_get_opt _opt "$_arg_file";
parsearger_get_flag _flag "$_arg_file";
parsearger_get_nested _nested "$_arg_file";
parsearger_get_dependencies _dependencies "$_arg_file";

# echo "_help: $_help";
# echo "_set: ${_set[@]}";
# echo "_leftovers: $_leftovers";
# echo "_pos: ${_pos[@]}";
# echo "_opt: ${_opt[@]}";
# echo "_flag: ${_flag[@]}";
# echo "_nested: ${_nested[@]}";

cmdGen=("--no-bang");

if [[ "${_arg_set_version}" != "" ]]; then
	# TODO: get versopn opt name and short
	cmdGen+=("--set-version" "${_arg_set_version}");
elif [[ "${_version}" != "" ]]; then
	_version="--set-version ${_version//--option/--version-opt-name}";
	_version="${_version//--short-option/--version-short-option}";
	_version="${_version//\"/}";
	# echo "$_version";
	read -a vergen <<< "$_version";
	cmdGen+=("${vergen[@]}");
fi

if [ "$_help" != "" ]; then
  cmdGen+=("--help-message" "$(eval "parseHelpMessage $_help")");
fi

if [ "${_set[*]}" != "" ] && [ "${#_set[@]}" -gt "0" ]; then
  for __set in "${_set[@]}"; do
    cmdGen+=("--set" "$__set");
  done
fi
if [[ "${#_arg_set[@]}" -gt 0 ]]; then
	for __n_set in "${_arg_set[@]}"; do
		cmdGen+=("--set" "$__n_set")
	done
fi

if [ "${_source[*]}" != "" ] && [ "${#_source[@]}" -gt "0" ]; then
  for __source in "${_source[@]}"; do
    cmdGen+=("--source" "$__source");
  done
fi
if [[ "${#_arg_source[@]}" -gt 0 ]]; then
	for __n_source in "${_arg_source[@]}"; do
		cmdGen+=("--source" "$__n_source")
	done
fi

if [ "$_arg_leftovers" != "off" ] || [ "$_leftovers" != "" ]; then
  cmdGen+=("--leftovers" "--leftovers-name" "${_leftovers:-"leftovers"}");
fi
if [ "$_arg_parse_leftovers" != "off" ] || [ "$_parse_leftovers" != "" ]; then
	cmdGen+=("--parse-leftovers");
fi

if [ "${_pos[*]}" != "" ] && [ "${#_pos[@]}" -gt "0" ]; then
  for __pos in "${_pos[@]}"; do
    cmdGen+=("--pos" "$__pos");
  done
fi
if [[ "${#_arg_pos[@]}" -gt 0 ]]; then
	for __n_pos in "${_arg_pos[@]}"; do
		cmdGen+=("--pos" "$__n_pos")
	done
fi

if [ "${_opt[*]}" != "" ] && [ "${#_opt[@]}" -gt "0" ]; then
  for __opt in "${_opt[@]}"; do
    cmdGen+=("--opt" "$__opt");
  done
fi
if [[ "${#_arg_opt[@]}" -gt 0 ]]; then
	for __n_opt in "${_arg_opt[@]}"; do
		cmdGen+=("--opt" "$__n_opt")
	done
fi

if [ "${_flag[*]}" != "" ] && [ "${#_flag[@]}" -gt "0" ]; then
  for __flag in "${_flag[@]}"; do
    cmdGen+=("--flag" "$__flag");
  done
fi
if [[ "${#_arg_flag[@]}" -gt 0 ]]; then
	for __n_flag in "${_arg_flag[@]}"; do
		cmdGen+=("--flag" "$__n_flag")
	done
fi

if [ "${_nested[*]}" != "" ] && [ "${#_nested[@]}" -gt "0" ]; then
  for __nested in "${_nested[@]}"; do
    cmdGen+=("--nested" "$__nested");
  done
fi
if [[ "${#_arg_nested[@]}" -gt 0 ]]; then
	for __n_nested in "${_arg_nested[@]}"; do
		cmdGen+=("--nested" "$__n_nested")
	done
fi

if [ "${_dependencies[*]}" != "" ] && [ "${#_dependencies[@]}" -gt "0" ]; then
  for __dependencies in "${_dependencies[@]}"; do
    cmdGen+=(--dependencies "$__dependencies");
  done
fi
if [[ "${#_arg_dependencies[@]}" -gt 0 ]]; then
	for __n_dependencies in "${_arg_dependencies[@]}"; do
		cmdGen+=(--dependencies "$__n_dependencies")
	done
fi

# XDG
_xdg="$(parsearger_get_xdg "$_arg_file")";
if [ "$_xdg" != "" ]; then
	# Parse the XDG line to extract arguments
	# Format: "appname" --config --data --no-cache --config-file "custom"
	# Use eval to properly handle quoted strings
	eval "xdgArgs=($_xdg)";
	# First arg is the app name
	cmdGen+=(--xdg "${xdgArgs[0]}");
	# Transform remaining args: --config -> --xdg-config, --no-cache -> --no-xdg-cache
	for ((i=1; i<${#xdgArgs[@]}; i++)); do
		_xarg="${xdgArgs[$i]}";
		case "$_xarg" in
			--config) cmdGen+=(--xdg-config) ;;
			--no-config) cmdGen+=(--no-xdg-config) ;;
			--data) cmdGen+=(--xdg-data) ;;
			--no-data) cmdGen+=(--no-xdg-data) ;;
			--cache) cmdGen+=(--xdg-cache) ;;
			--no-cache) cmdGen+=(--no-xdg-cache) ;;
			--config-file) 
				cmdGen+=(--xdg-config-file);
				i=$((i+1));
				cmdGen+=("${xdgArgs[$i]}");
				;;
			*) cmdGen+=("$_xarg") ;;
		esac
	done
fi

tmpGen="$(mktemp)";
"$SCRIPT_ROOT_DIR/generate" "${cmdGen[@]}" > "$tmpGen";

tmpMrk="tmpMrk"
tmpMrk="___${tmpMrk}___parsearger"
# https://unix.stackexchange.com/a/485670 <3
parsedGen="$(sed -e "/${paStart}-end/a ${tmpMrk}" -e "/${paStart}-begin/,/${paStart}-end/d" "$_arg_file" | sed -e "/${tmpMrk}/r ${tmpGen}" -e "/${tmpMrk}/d")";

rm "$tmpGen";

if [ "$_arg_inplace" == "on" ]; then
  echo "$parsedGen" > "$_arg_file";
else 
  echo "$parsedGen";
fi
