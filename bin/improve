#!/bin/bash
# @parseArger-begin
# @parseArger-help "improve an existing parseArger script using AI" --option "help" --short-option "h"
# @parseArger-version "1.0" --option "version" --short-option "v"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger pos script "script file to improve"
# @parseArger pos prompt "what to improve or add"
# @parseArger opt ai-bin "ai-gents bin path" --default-value "ai"
# @parseArger opt provider "AI provider override"
# @parseArger opt model "AI model override"
# @parseArger opt api-key "API key override"
# @parseArger opt temperature "temperature" --default-value "0.3"
# @parseArger flag stream "stream AI output" --on
# @parseArger flag dry-run "show what would be done"
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
_arg_script="";
_arg_prompt="";
# OPTIONALS ARGUMENTS
_arg_ai_bin="ai"
_arg_provider=
_arg_model=
_arg_api_key=
_arg_temperature="0.3"
# FLAGS
_arg_stream="on"
_arg_dry_run="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "improve an existing parseArger script using AI:"
	echo -e "	script: script file to improve"
	echo -e "	prompt: what to improve or add"
	echo -e "	--ai-bin <ai-bin>: ai-gents bin path [default: ' ai ']"
	echo -e "	--provider <provider>: AI provider override"
	echo -e "	--model <model>: AI model override"
	echo -e "	--api-key <api-key>: API key override"
	echo -e "	--temperature <temperature>: temperature [default: ' 0.3 ']"
	echo -e "	--stream|--no-stream: stream AI output, on by default (use --no-stream to turn it off)"
	echo -e "	--dry-run|--no-dry-run: show what would be done"
	echo -e "Usage :
	$0 <script> <prompt> [--ai-bin <value>] [--provider <value>] [--model <value>] [--api-key <value>] [--temperature <value>] [--[no-]stream] [--[no-]dry-run]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="[0;31m";
				;;
			-2)
				_arg_COLOR="[0;33m";
				;;
			-1)
				_arg_COLOR="[1;33m";
				;;
			1)
				_arg_COLOR="[0;32m";
				;;
			2)
				_arg_COLOR="[1;36m";
				;;
			3)
				_arg_COLOR="[0;36m";
				;;
			*)
				_arg_COLOR="[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			--ai-bin)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_ai_bin="$2"
				shift
				;;
			--ai-bin=*)
				_arg_ai_bin="${_key##--ai-bin=}"
				;;
			
			--provider)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_provider="$2"
				shift
				;;
			--provider=*)
				_arg_provider="${_key##--provider=}"
				;;
			
			--model)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_model="$2"
				shift
				;;
			--model=*)
				_arg_model="${_key##--model=}"
				;;
			
			--api-key)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_api_key="$2"
				shift
				;;
			--api-key=*)
				_arg_api_key="${_key##--api-key=}"
				;;
			
			--temperature)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_temperature="$2"
				shift
				;;
			--temperature=*)
				_arg_temperature="${_key##--temperature=}"
				;;
			
			--stream)
				_arg_stream="on"
				;;
			--no-stream)
				_arg_stream="off"
				;;
			--dry-run)
				_arg_dry_run="on"
				;;
			--no-dry-run)
				_arg_dry_run="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			-v|--version)
				print_version;
				exit 0;
				;;
			-v*)
				print_version;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="script prompt"
	if [ "${_positionals_count}" -gt 2 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 2 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').
	${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 2 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 2 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="_arg_script _arg_prompt ";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	script: ${_arg_script}";
	echo -e "	prompt: ${_arg_prompt}";
	echo -e "	ai-bin: ${_arg_ai_bin}";
	echo -e "	provider: ${_arg_provider}";
	echo -e "	model: ${_arg_model}";
	echo -e "	api-key: ${_arg_api_key}";
	echo -e "	temperature: ${_arg_temperature}";
	echo -e "	stream: ${_arg_stream}";
	echo -e "	dry-run: ${_arg_dry_run}";

}


print_version()
{
	echo "1.0";
}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

# Source shared AI utilities
source "$_SCRIPT_DIR/ai-utils"

# Validate script exists
if [ ! -f "$_arg_script" ]; then
	die "Script not found: $_arg_script" 1
fi

# Check it's a parseArger script
if ! grep -q "# @parseArger-end" "$_arg_script"; then
	die "Not a parseArger script: $_arg_script" 1
fi

# Agent directory
AGENT_DIR="$_SCRIPT_DIR/../agents/ai-gents"

# === MAIN LOGIC ===

log "Analyzing prompt..." 1

# Step 1: Classify the request (prompt only, no file content)
ai_cmd=$(build_ai_cmd "$AGENT_DIR/classifier.yml" "$_arg_prompt")
mode=$(eval "$ai_cmd" 2>/dev/null | tr -d '[:space:]' | tr '[:upper:]' '[:lower:]')

if [[ "$mode" != "parse" && "$mode" != "script" ]]; then
	log "Classifier returned: $mode, defaulting to 'script'" 1
	mode="script"
fi

log "Mode: $mode" 1

PARSEARGER_CMD=$(get_parsearger_cmd)
_script_path=$(realpath "$_arg_script")

if [[ "$mode" == "parse" ]]; then
	# Step 2a: Generate parseArger parse command
	log "Generating parseArger parse command..." 1
	
	parser_prompt="Generate a parseArger parse command for: $_arg_prompt
Script path: $_script_path

Put the final parseArger parse command in a code block."
	
	ai_cmd=$(build_ai_cmd "$AGENT_DIR/parser.yml" "$parser_prompt")
	raw_cmd=$(eval "$ai_cmd" 2>/dev/null)
	
	if [ -z "$raw_cmd" ]; then
		die "AI failed to generate command" 1
	fi
	
	# Extract from code block if wrapped
	raw_cmd=$(extract_from_codeblock "$raw_cmd")
	
	# Validate the command
	validated_cmd=$(validate_parsearger_cmd "$raw_cmd" "parse" "$_script_path")
	if [ $? -ne 0 ]; then
		die "Invalid command generated: $validated_cmd" 1
	fi
	
	log "Generated command: $validated_cmd" 3
	
	if [ "$_arg_dry_run" == "on" ]; then
		echo "Would run: $validated_cmd"
	else
		# Replace script path with actual path and ensure --inplace
		args_part=$(echo "$validated_cmd" | sed 's/parseArger parse [^ ]*//')
		final_cmd="$PARSEARGER_CMD parse \"$_script_path\" --inplace $args_part"
		
		log "Running: $final_cmd" 2
		eval "$final_cmd" || die "parseArger parse failed" 1
		
		log "parseArger declarations updated" 1
	fi
fi

# Step 3: Regenerate user code section (for both modes)
log "Updating script implementation..." 1

scriptor_prompt="Update the bash script implementation based on: $_arg_prompt

Only output the implementation code that goes AFTER the # @parseArger-end marker.
Do not include the parseArger declarations section.
Use the \$_arg_* variables defined by parseArger."

if [ "$_arg_dry_run" == "on" ]; then
	echo "Would regenerate implementation section with AI"
else
	# Use --attach to provide context
	ai_cmd_with_attach="$_arg_ai_bin agent ask $AGENT_DIR/scriptor.yml \"$scriptor_prompt\" --attach \"$_script_path\""
	
	if [ -n "$_arg_provider" ]; then
		ai_cmd_with_attach+=" --provider \"$_arg_provider\""
	fi
	if [ -n "$_arg_model" ]; then
		ai_cmd_with_attach+=" --model \"$_arg_model\""
	fi
	if [ "$_arg_stream" == "on" ]; then
		ai_cmd_with_attach+=" --stream"
	fi
	
	new_content=$(eval "$ai_cmd_with_attach" 2>/dev/null)
	
	if [ -z "$new_content" ]; then
		die "AI failed to generate implementation" 1
	fi
	
	# Extract from code block if wrapped
	new_content=$(extract_from_codeblock "$new_content")
	
	replace_user_code_section "$_script_path" "$new_content"
	
	log "Script updated successfully: $_arg_script" 1
fi

