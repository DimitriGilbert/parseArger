#!/bin/bash

# @parseArger-begin
# @parseArger-help "generate XDG base directory declaration" --option "help" --short-option "h"
# @parseArger-version "0.1" --option "version" --short-option "v"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
# @parseArger-declarations
# @parseArger pos app-name "application name for XDG directories"
# @parseArger flag config "enable XDG_CONFIG_HOME support" --on
# @parseArger flag data "enable XDG_DATA_HOME support" --on
# @parseArger flag cache "enable XDG_CACHE_HOME support"
# @parseArger opt config-file "config file name" --default-value "config"
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
_arg_app_name=
# OPTIONALS ARGUMENTS
_arg_config_file="config"
# FLAGS
_arg_config="on"
_arg_data="on"
_arg_cache="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "generate XDG base directory declaration:"
	echo -e "	<app-name>: application name for XDG directories"
	echo -e "	--config-file <config-file>: config file name [default: ' config ']"
	echo -e "	--config|--no-config: enable XDG_CONFIG_HOME support, on by default (use --no-config to turn it off)"
	echo -e "	--data|--no-data: enable XDG_DATA_HOME support, on by default (use --no-data to turn it off)"
	echo -e "	--cache|--no-cache: enable XDG_CACHE_HOME support"
	echo -e "Usage :
	$0 <app-name> [--config-file <value>] [--[no-]config] [--[no-]data] [--[no-]cache]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="\033[0;31m";
				;;
			-2)
				_arg_COLOR="\033[0;33m";
				;;
			-1)
				_arg_COLOR="\033[1;33m";
				;;
			1)
				_arg_COLOR="\033[0;32m";
				;;
			2)
				_arg_COLOR="\033[1;36m";
				;;
			3)
				_arg_COLOR="\033[0;36m";
				;;
			*)
				_arg_COLOR="\033[0m";
				;;
		esac
		echo -e "${_arg_COLOR}${_arg_msg}\033[0m";
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			--config-file)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_config_file="$2"
				shift
				;;
			--config-file=*)
				_arg_config_file="${_key##--config-file=}"
				;;
			
			--config)
				_arg_config="on"
				;;
			--no-config)
				_arg_config="off"
				;;
			--data)
				_arg_data="on"
				;;
			--no-data)
				_arg_data="off"
				;;
			--cache)
				_arg_cache="on"
				;;
			--no-cache)
				_arg_cache="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			-v|--version)
				print_version;
				exit 0;
				;;
			-v*)
				print_version;
				exit 0;
				;;
			--verbose)
					if [ $# -lt 2 ];then
						_verbose_level="$((_verbose_level + 1))";
					else
						_verbose_level="$2";
						shift;
					fi
					;;
				--quiet)
					if [ $# -lt 2 ];then
						_verbose_level="$((_verbose_level - 1))";
					else
						_verbose_level="-$2";
						shift;
					fi
					;;
				
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="app-name"
	if [ "${_positionals_count}" -gt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 1 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').\n\t${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 1 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="_arg_app_name ";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "\tapp-name: ${_arg_app_name}";
	echo -e "\tconfig-file: ${_arg_config_file}";
	echo -e "\tconfig: ${_arg_config}";
	echo -e "\tdata: ${_arg_data}";
	echo -e "\tcache: ${_arg_cache}";

}


print_version()
{
	echo "0.1";
}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;



# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

# Build the declaration comment
outStr="# @parse";
outStr+="Arger-xdg \"${_arg_app_name}\"";

if [ "$_arg_config" == "on" ]; then
	outStr+=" --config";
else
	outStr+=" --no-config";
fi

if [ "$_arg_data" == "on" ]; then
	outStr+=" --data";
else
	outStr+=" --no-data";
fi

if [ "$_arg_cache" == "on" ]; then
	outStr+=" --cache";
else
	outStr+=" --no-cache";
fi

if [ "$_arg_config_file" != "config" ]; then
	outStr+=" --config-file \"${_arg_config_file}\"";
fi

echo "$outStr";
